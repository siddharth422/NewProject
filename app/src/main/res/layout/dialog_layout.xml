<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AMC/Warranty Type"
        android:textSize="16sp">
    </TextView>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroupamc">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  Warranty"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   AMC"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:checked="false"

            android:textSize="14sp" />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Warranty start"
            android:inputType="date"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:id="@+id/start"
            android:drawablePadding="10dp"
            android:lines="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Warranty expire"
            android:singleLine="true"
            android:id="@+id/end"
            android:lines="1"
            android:maxLines="1"
            android:drawableRight="@drawable/ic_date_range_black_24dp"

            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Mode"
        android:textSize="16sp">
    </TextView>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/radioGroupservice">

        <RadioButton
            android:id="@+id/cash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  Cash"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/cheque"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   Cheque"
           android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:checked="false"

            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/nift"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="   NIFT"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:checked="false"

            android:textSize="14sp" />
    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Bank Name"
            android:singleLine="true"
            android:id="@+id/bankname"
            android:lines="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Reference Number"
            android:singleLine="true"
            android:id="@+id/referncenumber"
            android:lines="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Total Payment"
            android:singleLine="true"
            android:id="@+id/totalpayment"
            android:lines="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Received Payment  "
            android:singleLine="true"
            android:id="@+id/receivedpayment"
            android:lines="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginBottom="10dp"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:padding="10dp"
            android:hint="Payment Date"
            android:singleLine="true"
            android:id="@+id/paymentdate"
            android:lines="1"
            android:maxLines="1"
            android:drawableRight="@drawable/ic_date_range_black_24dp"

            android:inputType="date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_rounded"
        android:textColor="@color/white">

    </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
