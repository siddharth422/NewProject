    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_height="200dp">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:id="@+id/liftregister"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_height="190dp"
                android:visibility="visible"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:id="@+id/report_layout"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:id="@+id/report_image"
                        android:layout_height="150dp"
                        android:scaleType="center"
                        android:src="@drawable/liftadd"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/report_image"
                        android:text="@string/add_lift"
                        android:textColor="#000"
                        android:id="@+id/textview1"
                        android:textSize="18sp"
                        android:gravity="center"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/listlift"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="190dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="10dp"
                tools:ignore="RtlCompat">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:id="@+id/listlead_image"
                        android:layout_height="150dp"
                        android:scaleType="center"
                        android:src="@drawable/leads_image"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/listlead_image"
                        android:text="@string/lift_list"
                        android:textColor="#000"
                        android:id="@+id/textview2"
                        android:textSize="18sp"
                        android:gravity="center"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

